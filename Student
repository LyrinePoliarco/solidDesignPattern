class Student implements LibraryUser {
    private String name;
    private String id;
    private List<LibraryResource> borrowedResources = new ArrayList<>();
    private BorrowingService borrowingService;

    public Student(String name, String id, BorrowingService borrowingService) {
        this.name = name;
        this.id = id;
        this.borrowingService = borrowingService;
    }

    @Override
    public boolean borrowResource(LibraryResource resource) {
        boolean success = borrowingService.borrowResource(resource);
        if (success) {
            borrowedResources.add(resource);
        }
        return success;
    }

    @Override
    public boolean returnResource(LibraryResource resource) {
        boolean success = borrowingService.returnResource(resource);
        if (success) {
            borrowedResources.remove(resource);
        }
        return success;
    }

    @Override
    public String getName() {
        return name;
    }

    @Override
    public String getId() {
        return id;
    }

    @Override
    public List<LibraryResource> getBorrowedResources() {
        return new ArrayList<>(borrowedResources);
    }
}
