abstract class BaseLibraryResource implements LibraryResource {
    private String title;
    private boolean available;

    public BaseLibraryResource(String title) {
        this.title = title;
        this.available = true;
    }

    @Override
    public String getTitle() {
        return title;
    }

    @Override
    public boolean isAvailable() {
        return available;
    }

    @Override
    public void setBorrowed(boolean borrowed) {
        this.available = !borrowed;
    }
}
